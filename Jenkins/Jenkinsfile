pipeline {
    agent any

    tools {
        jdk 'jdk11'
    }

    environment {
        GRADLE_USER_HOME = "${env.WORKSPACE}/.gradle"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Prep Gradle') {
            steps {
                sh 'chmod +x ./gradlew'
                sh './gradlew --version'
            }
        }

        stage('Build (no tests)') {
            steps {
                sh './gradlew clean build -x test'
            }
        }

        stage('Run Tests') {
            steps {
                sh './gradlew test'
            }
        }

        stage('Check WAR') {
            steps {
                sh 'ls -lh build/libs/*.war || echo "WAR not found"'
            }
        }

        // додатково:
        // stage('Docker Build') {
        //     steps {
        //         sh 'docker build -t myapp:latest .'
        //     }
        // }
    }

    post {
        always {
            archiveArtifacts artifacts: 'build/libs/*.war', allowEmptyArchive: true
            junit 'build/test-results/test/*.xml'
        }
    }
}
