pipeline {
    agent any

    

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Gradle Build') {
            steps {
                sh '../gradlew clean build '  
            }
        }

        stage('Run Tests') {
            steps {
                sh './gradlew test'
            }
        }

        stage('WAR Check') {
            steps {
                sh 'ls build/libs/*.war'
            }
        }

        
    }
}

